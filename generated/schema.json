{
  "components": {
    "schemas": {
      "Auth": {
        "type": "object",
        "required": [
          "redirections",
          "anonymous",
          "signUp",
          "roles",
          "email",
          "gravatar",
          "locale",
          "password",
          "sms",
          "webauthn",
          "accessToken",
          "refreshToken",
          "mfa",
          "providers"
        ],
        "properties": {
          "redirections": {
            "type": "object",
            "required": [
              "clientUrl",
              "allowedUrls"
            ],
            "properties": {
              "clientUrl": {
                "$ref": "#/components/schemas/Url"
              },
              "allowedUrls": {
                "description": "We should implement wildcards soon, so the #Url type should not be used here",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "anonymous": {
            "type": "object",
            "required": [
              "enabled"
            ],
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "signUp": {
            "type": "object",
            "required": [
              "enabled"
            ],
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          },
          "roles": {
            "type": "object",
            "required": [
              "default",
              "allowed"
            ],
            "properties": {
              "default": {
                "$ref": "#/components/schemas/UserRole"
              },
              "allowed": {
                "type": "array",
                "items": [
                  {
                    "$ref": "#/components/schemas/Auth.roles.default"
                  },
                  {
                    "type": "string",
                    "enum": [
                      "me"
                    ]
                  }
                ],
                "default": [
                  "user",
                  "me"
                ]
              }
            }
          },
          "email": {
            "type": "object",
            "required": [
              "passwordless",
              "verification",
              "domains",
              "emails"
            ],
            "properties": {
              "passwordless": {
                "type": "object",
                "required": [
                  "enabled"
                ],
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                }
              },
              "verification": {
                "type": "object",
                "required": [
                  "required"
                ],
                "properties": {
                  "required": {
                    "type": "boolean",
                    "default": true
                  }
                }
              },
              "domains": {
                "type": "object",
                "required": [
                  "allowed",
                  "blocked"
                ],
                "properties": {
                  "allowed": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/FQDN"
                    }
                  },
                  "blocked": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/FQDN"
                    }
                  }
                }
              },
              "emails": {
                "type": "object",
                "required": [
                  "allowed",
                  "blocked"
                ],
                "properties": {
                  "allowed": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Email"
                    }
                  },
                  "blocked": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Email"
                    }
                  }
                }
              }
            }
          },
          "gravatar": {
            "type": "object",
            "required": [
              "enabled",
              "default",
              "rating"
            ],
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "default": {
                "type": "string",
                "enum": [
                  "blank",
                  "mp",
                  "identicon",
                  "monsterid",
                  "wavatar",
                  "retro",
                  "robohash",
                  "404"
                ],
                "default": "blank"
              },
              "rating": {
                "type": "string",
                "enum": [
                  "g",
                  "r",
                  "x",
                  "pg"
                ],
                "default": "g"
              }
            }
          },
          "locale": {
            "type": "object",
            "required": [
              "default",
              "allowed"
            ],
            "properties": {
              "default": {
                "$ref": "#/components/schemas/Locale"
              },
              "allowed": {
                "type": "array",
                "default": [
                  "en"
                ],
                "oneOf": [
                  {
                    "allOf": [
                      {
                        "items": [
                          {
                            "$ref": "#/components/schemas/Auth.locale.default"
                          }
                        ]
                      },
                      {
                        "not": {
                          "anyOf": [
                            {
                              "minItems": 1,
                              "items": [
                                {
                                  "$ref": "#/components/schemas/Auth.locale.default"
                                }
                              ],
                              "additionalItems": {
                                "$ref": "#/components/schemas/Locale"
                              }
                            }
                          ]
                        }
                      }
                    ]
                  },
                  {
                    "allOf": [
                      {
                        "minItems": 1,
                        "items": [
                          {
                            "$ref": "#/components/schemas/Auth.locale.default"
                          }
                        ],
                        "additionalItems": {
                          "$ref": "#/components/schemas/Locale"
                        }
                      },
                      {
                        "not": {
                          "anyOf": [
                            {
                              "items": [
                                {
                                  "$ref": "#/components/schemas/Auth.locale.default"
                                }
                              ]
                            }
                          ]
                        }
                      }
                    ]
                  }
                ]
              }
            }
          },
          "password": {
            "type": "object",
            "required": [
              "hibp",
              "minLength"
            ],
            "properties": {
              "hibp": {
                "type": "object",
                "required": [
                  "enabled"
                ],
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                }
              },
              "minLength": {
                "type": "number",
                "minimum": 3,
                "default": 9
              }
            }
          },
          "sms": {
            "type": "object",
            "required": [
              "passwordless"
            ],
            "properties": {
              "passwordless": {
                "type": "object",
                "required": [
                  "enabled"
                ],
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          },
          "webauthn": {
            "type": "object",
            "required": [
              "enabled"
            ],
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "accessToken": {
            "type": "object",
            "required": [
              "expiresIn",
              "customClaims"
            ],
            "properties": {
              "expiresIn": {
                "type": "number",
                "default": 900
              },
              "customClaims": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "key",
                    "value"
                  ],
                  "properties": {
                    "key": {
                      "description": "We should ideally enforce the keys and values format here",
                      "type": "string",
                      "pattern": "[a-zA-Z_]{1,}[a-zA-Z0-9_]*"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "refreshToken": {
            "type": "object",
            "required": [
              "expiresIn"
            ],
            "properties": {
              "expiresIn": {
                "type": "number",
                "default": 43200
              }
            }
          },
          "mfa": {
            "type": "object",
            "required": [
              "enabled"
            ],
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "providers": {
            "type": "object",
            "required": [
              "apple",
              "azuread",
              "bitbucket",
              "discord",
              "facebook",
              "github",
              "gitlab",
              "google",
              "linkedin",
              "spotify",
              "strava",
              "twitch",
              "twitter",
              "windowslive",
              "workos"
            ],
            "properties": {
              "apple": {
                "description": "Will be implemented soon\ndefaults: {\n\tsignUp: {\n\t\tenabled: true\n\t}\n}",
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "allOf": [
                  {
                    "$ref": "#/components/schemas/OauthProvider"
                  },
                  {
                    "required": [
                      "enabled"
                    ]
                  }
                ]
              },
              "azuread": {
                "type": "object",
                "default": {
                  "enabled": false
                },
                "oneOf": [
                  {
                    "required": [
                      "tenant",
                      "enabled",
                      "clientId",
                      "clientSecret"
                    ],
                    "properties": {
                      "tenant": {
                        "type": "string",
                        "default": "common"
                      },
                      "enabled": {
                        "type": "boolean",
                        "enum": [
                          true
                        ]
                      },
                      "clientId": {
                        "type": "string"
                      },
                      "clientSecret": {
                        "type": "string"
                      }
                    }
                  },
                  {
                    "$ref": "#/components/schemas/StandardOauthProviderDisabled"
                  }
                ]
              },
              "bitbucket": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "discord": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "facebook": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "github": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "gitlab": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "google": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "linkedin": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "spotify": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "strava": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "twitch": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "twitter": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "allOf": [
                  {
                    "$ref": "#/components/schemas/OauthProvider"
                  },
                  {
                    "required": [
                      "enabled"
                    ]
                  }
                ]
              },
              "windowslive": {
                "$ref": "#/components/schemas/StandardOauthProvider"
              },
              "workos": {
                "type": "object",
                "default": {
                  "enabled": false
                },
                "oneOf": [
                  {
                    "oneOf": [
                      {
                        "allOf": [
                          {
                            "required": [
                              "enabled",
                              "clientId",
                              "clientSecret"
                            ],
                            "properties": {
                              "enabled": {
                                "type": "boolean",
                                "enum": [
                                  true
                                ]
                              },
                              "clientId": {
                                "type": "string"
                              },
                              "clientSecret": {
                                "type": "string"
                              }
                            }
                          },
                          {
                            "not": {
                              "anyOf": [
                                {
                                  "required": [
                                    "enabled",
                                    "clientId",
                                    "organization",
                                    "clientSecret"
                                  ],
                                  "properties": {
                                    "enabled": {
                                      "type": "boolean",
                                      "enum": [
                                        true
                                      ]
                                    },
                                    "clientId": {
                                      "type": "string"
                                    },
                                    "organization": {
                                      "type": "string"
                                    },
                                    "clientSecret": {
                                      "type": "string"
                                    }
                                  }
                                },
                                {
                                  "required": [
                                    "enabled",
                                    "clientId",
                                    "connection",
                                    "clientSecret"
                                  ],
                                  "properties": {
                                    "enabled": {
                                      "type": "boolean",
                                      "enum": [
                                        true
                                      ]
                                    },
                                    "clientId": {
                                      "type": "string"
                                    },
                                    "connection": {
                                      "type": "string"
                                    },
                                    "clientSecret": {
                                      "type": "string"
                                    }
                                  }
                                },
                                {
                                  "required": [
                                    "enabled",
                                    "clientId",
                                    "domain",
                                    "clientSecret"
                                  ],
                                  "properties": {
                                    "enabled": {
                                      "type": "boolean",
                                      "enum": [
                                        true
                                      ]
                                    },
                                    "clientId": {
                                      "type": "string"
                                    },
                                    "domain": {
                                      "type": "string"
                                    },
                                    "clientSecret": {
                                      "type": "string"
                                    }
                                  }
                                }
                              ]
                            }
                          }
                        ]
                      },
                      {
                        "required": [
                          "enabled",
                          "clientId",
                          "organization",
                          "clientSecret"
                        ],
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "enum": [
                              true
                            ]
                          },
                          "clientId": {
                            "type": "string"
                          },
                          "organization": {
                            "type": "string"
                          },
                          "clientSecret": {
                            "type": "string"
                          }
                        }
                      },
                      {
                        "required": [
                          "enabled",
                          "clientId",
                          "connection",
                          "clientSecret"
                        ],
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "enum": [
                              true
                            ]
                          },
                          "clientId": {
                            "type": "string"
                          },
                          "connection": {
                            "type": "string"
                          },
                          "clientSecret": {
                            "type": "string"
                          }
                        }
                      },
                      {
                        "required": [
                          "enabled",
                          "clientId",
                          "domain",
                          "clientSecret"
                        ],
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "enum": [
                              true
                            ]
                          },
                          "clientId": {
                            "type": "string"
                          },
                          "domain": {
                            "type": "string"
                          },
                          "clientSecret": {
                            "type": "string"
                          }
                        }
                      }
                    ]
                  },
                  {
                    "$ref": "#/components/schemas/StandardOauthProviderDisabled"
                  }
                ]
              }
            }
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Config": {
        "type": "object",
        "required": [
          "global",
          "hasura",
          "storage",
          "functions",
          "auth",
          "smtp"
        ],
        "properties": {
          "global": {
            "$ref": "#/components/schemas/Global"
          },
          "hasura": {
            "$ref": "#/components/schemas/Hasura"
          },
          "storage": {
            "$ref": "#/components/schemas/Storage"
          },
          "functions": {
            "$ref": "#/components/schemas/Functions"
          },
          "auth": {
            "$ref": "#/components/schemas/Auth"
          },
          "smtp": {
            "$ref": "#/components/schemas/Smtp"
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Email": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$",
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "FQDN": {
        "type": "string",
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Functions": {
        "type": "object",
        "required": [
          "node"
        ],
        "properties": {
          "node": {
            "type": "object",
            "required": [
              "version"
            ],
            "properties": {
              "version": {
                "type": "integer",
                "enum": [
                  16
                ]
              }
            }
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Global": {
        "type": "object",
        "required": [
          "environment",
          "name"
        ],
        "properties": {
          "environment": {
            "description": "User-defined environment variables that are spread over all services",
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "key",
                "value"
              ],
              "properties": {
                "key": {
                  "type": "string",
                  "pattern": "[a-zA-Z_]{1,}[a-zA-Z0-9_]*"
                },
                "value": {
                  "type": "string"
                }
              }
            }
          },
          "name": {
            "description": "Name of the application",
            "type": "string",
            "default": "Nhost application"
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Hasura": {
        "type": "object",
        "required": [
          "jwtSecrets"
        ],
        "properties": {
          "jwtSecrets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JWTSecret"
            }
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "IP": {
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "JWTSecret": {
        "description": "* https://hasura.io/docs/latest/auth/authentication/jwt/",
        "type": "object",
        "properties": {
          "claims_map": {
            "type": "object"
          },
          "claims_format": {
            "type": "string",
            "enum": [
              "json",
              "stringified_json"
            ],
            "default": "json"
          },
          "audience": {
            "type": "string"
          },
          "issuer": {
            "type": "string"
          },
          "allowed_skew": {
            "type": "number"
          },
          "header": {
            "type": "string"
          }
        },
        "allOf": [
          {
            "oneOf": [
              {
                "required": [
                  "type",
                  "key"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "HS256",
                      "HS512",
                      "RS256",
                      "RS384",
                      "RS512",
                      "Ed25519",
                      "HS384"
                    ],
                    "default": "HS256"
                  },
                  "key": {
                    "type": "string"
                  }
                }
              },
              {
                "required": [
                  "jwk_url"
                ],
                "properties": {
                  "jwk_url": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "default": null
                  }
                }
              }
            ]
          },
          {
            "oneOf": [
              {
                "required": [
                  "claims_namespace"
                ],
                "properties": {
                  "claims_namespace": {
                    "type": "string",
                    "default": "https://hasura.io/jwt/claims"
                  }
                }
              },
              {
                "required": [
                  "claims_namespace_path"
                ],
                "properties": {
                  "claims_namespace_path": {
                    "type": "string"
                  }
                }
              },
              {
                "not": {
                  "anyOf": [
                    {
                      "required": [
                        "claims_namespace"
                      ],
                      "properties": {
                        "claims_namespace": {
                          "type": "string",
                          "default": "https://hasura.io/jwt/claims"
                        }
                      }
                    },
                    {
                      "required": [
                        "claims_namespace_path"
                      ],
                      "properties": {
                        "claims_namespace_path": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        ],
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Locale": {
        "type": "string",
        "minLength": 2,
        "maxLength": 2,
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "OauthProvider": {
        "type": "object",
        "required": [
          "enabled"
        ],
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Port": {
        "type": "integer",
        "minimum": 0,
        "maximum": 65535,
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Smtp": {
        "type": "object",
        "required": [
          "user",
          "password",
          "sender",
          "host",
          "port",
          "secure",
          "method"
        ],
        "properties": {
          "user": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "sender": {
            "description": "? more advanced validation?",
            "type": "string",
            "default": ""
          },
          "host": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/FQDN"
              },
              {
                "$ref": "#/components/schemas/IP"
              }
            ]
          },
          "port": {
            "$ref": "#/components/schemas/Port"
          },
          "secure": {
            "type": "boolean",
            "default": false
          },
          "method": {
            "type": "string",
            "enum": [
              "PLAIN",
              "LOGIN"
            ],
            "default": "PLAIN"
          }
        },
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "StandardOauthProvider": {
        "type": "object",
        "default": {
          "enabled": false
        },
        "oneOf": [
          {
            "$ref": "#/components/schemas/StandardOauthProviderEnabled"
          },
          {
            "$ref": "#/components/schemas/StandardOauthProviderDisabled"
          }
        ],
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "StandardOauthProviderDisabled": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "enum": [
              false
            ]
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/OauthProvider"
          },
          {
            "required": [
              "enabled"
            ]
          }
        ],
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "StandardOauthProviderEnabled": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "enum": [
              true
            ]
          },
          "clientId": {
            "type": "string"
          },
          "clientSecret": {
            "type": "string"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/OauthProvider"
          },
          {
            "required": [
              "enabled",
              "clientId",
              "clientSecret"
            ]
          }
        ],
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Storage": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "Url": {
        "type": "string",
        "$schema": "http://json-schema.org/draft-04/schema#"
      },
      "UserRole": {
